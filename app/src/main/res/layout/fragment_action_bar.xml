<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/action_bar_container"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/aqua_primary">

    <LinearLayout
        android:id="@+id/action_bar_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/action_bar_1_toggle"
            android:layout_width="57dp"
            android:layout_height="fill_parent"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_menu_white"
            android:background="@color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:orientation="vertical">

            <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
                android:id="@+id/action_bar_1_header"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:font="Roboto-Regular.ttf"/>

            <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
                android:id="@+id/action_bar_1_subheader"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="@string/home"
                android:textSize="16sp"
                android:textColor="#FFF"
                android:gravity="left|top"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>