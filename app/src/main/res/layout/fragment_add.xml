<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_add_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:id="@+id/fragment_add_primary_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue_primary"
        android:paddingLeft="16dp"
        android:paddingBottom="28dp">

        <ImageButton
            android:id="@+id/fragment_add_folder"
            android:layout_width="25dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_folder_white_not_selected"
            android:background="@color/transparent" />

        <EditText
            android:id="@+id/fragment_add_title"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:paddingLeft="31dp"
            android:gravity="left|center_vertical"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:background="@color/transparent"
            android:hint="@string/add_title_hint"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_add_container_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_add_img_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_content"/>

                <EditText
                    android:id="@+id/item_add_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="36dp"
                    android:background="@color/transparent"
                    android:hint="@string/add_item_hint"/>

                <ImageView
                    android:id="@+id/item_add_clear_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_action_clear" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_add_container_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_add_img_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_time"/>

                <EditText
                    android:id="@+id/item_add_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="36dp"
                    android:background="@color/transparent"
                    android:hint="@string/add_time_hint"/>

                <ImageView
                    android:id="@+id/item_add_clear_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_action_clear" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_add_container_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_add_img_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_date"/>

                <EditText
                    android:id="@+id/item_add_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="36dp"
                    android:background="@color/transparent"
                    android:hint="@string/add_date_hint"/>

                <ImageView
                    android:id="@+id/item_add_clear_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_action_clear" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_add_container_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_add_img_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_link"/>

                <EditText
                    android:id="@+id/item_add_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="36dp"
                    android:background="@color/transparent"
                    android:hint="@string/add_link_hint"/>

                <ImageView
                    android:id="@+id/item_add_clear_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_action_clear" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>