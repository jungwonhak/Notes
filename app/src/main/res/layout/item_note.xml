<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/bg_card">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
            android:id="@+id/item_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:gravity="left|center_vertical"
            android:textSize="24sp"
            app:font="Roboto-Regular.ttf" />

        <LinearLayout
            android:id="@+id/item_note_overflow_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_note_overflow"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:layout_gravity="right|top"
                android:src="@drawable/ic_action_3dots"
                android:background="#0000" />

            <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
                android:id="@+id/item_note_last_modified"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="right"
                android:gravity="right|bottom"
                android:textColor="@color/darkish_grey"
                android:textSize="12sp"
                app:font="Roboto-Regular.ttf" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_note_item_container"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_content" />

        <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
            android:id="@+id/item_note_item"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            app:font="Roboto-Regular.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/item_note_time_container"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_time" />

            <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
                android:id="@+id/item_note_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                app:font="Roboto-Regular.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_note_date_container"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_date" />

            <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
                android:id="@+id/item_note_date"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                app:font="Roboto-Regular.ttf" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_note_link_container"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_link" />

        <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
            android:id="@+id/item_note_link"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:gravity="left|center_vertical"
            android:autoLink="all"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            app:font="Roboto-Regular.ttf" />
    </LinearLayout>

