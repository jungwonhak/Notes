<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/bg_card">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="80dp"
        android:orientation="vertical">

        <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
            android:id="@+id/item_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/aqua_primary"
            android:textSize="24sp"
            app:font="Roboto-Regular.ttf" />

        <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
            android:id="@+id/item_note_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:paddingBottom="8dp"
            android:gravity="left|bottom"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:font="Roboto-Regular.ttf" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_note_overflow_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/item_note_overflow"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:minHeight="30dp"
            android:scaleType="fitCenter"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_action_3dots"
            android:background="#0000" />

        <ImageView
            android:id="@+id/item_note_folder"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:scaleType="fitCenter"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_action_folder" />

        <uk.me.lewisdeane.materialnotes.customviews.CustomTextView
            android:id="@+id/item_note_time"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:gravity="right|bottom"
            android:textColor="@color/darkish_grey"
            android:textSize="12sp"
            app:font="Roboto-Regular.ttf" />

    </LinearLayout>

</LinearLayout>